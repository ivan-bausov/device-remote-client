{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "importHelpers": true,
    "noEmitHelpers": true,
    "outDir": "build",
    "typeRoots": [
      "node_modules/@types",
      "lib/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
